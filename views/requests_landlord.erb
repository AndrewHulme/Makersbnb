
<div class='col-sm-8 text-left'>

<h1>As a Landlord requests:</h1>

<% @space.each do |space| %>
  <% if @user.user_id == space['user_id'] %>


    <% @requests.each do |request| %>
        <form action='/makersbnb-request-landlord' method='post'>
          <% if space['id'] == request['space_id'] %>
            Property: <%= space['space_name'] %><br>
            Date Requested: <%= request['date'] %><br>
            Booked by: <%= request['user_id'] %><br>
            Status: <%= request['status'] %><br>
            <span>
              <select name='approve_or_deny'>
                  <option value="Approve Request">Approve Request</option>
                  <option value="Decline Request">Decline Request</option>
              </select>
            </span>
          <input type="submit" value="Submit"><br><br><br>
        </form>

      <% end %>
    <% end %>


  <% end %>
<% end %>

</div>
