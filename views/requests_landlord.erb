<h1>As a Landlord requests:</h1>

<% @space.each do |space| %>
  <% if @user.user_id == space['user_id'] %>


    <% @requests.each do |request| %>
      <% if space['id'] == request['space_id'] %>
        Property: <%= space['space_name'] %><br>
        Date Requested: <%= request['date'] %><br>
        Booked by: <%= request['user_id'] %><br>
        Status: <%= request['status'] %><br><br>

        <form action=“/makersbnb-request” method=“post”>
              <span>
                <select name=“request_date”>
                    <option value=<%= days %><%= days %></option>
                </select>
              </span>
          <input type=“submit” value=“Request Space”>
        </form>

      <% end %>
    <% end %>


  <% end %>
<% end %>



